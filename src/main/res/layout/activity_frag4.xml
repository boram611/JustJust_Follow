<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/border2">

            <ImageView
                android:id="@+id/Flag"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:src="@drawable/flag1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"/>

            <ImageView
                android:id="@+id/lo"
                android:layout_width="11dp"
                android:layout_height="13dp"
                android:src="@drawable/b3"
                android:layout_toRightOf="@+id/Flag"
                android:layout_marginLeft="13dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="27 Myeongdong 2-gil Jung-gu Seoul"
                android:layout_toRightOf="@+id/lo"
                android:layout_alignTop="@+id/lo"
                android:textSize="11dp"/>

            <ImageView
                android:id="@+id/call"
                android:layout_width="11dp"
                android:layout_height="13dp"
                android:src="@drawable/call"
                android:layout_toRightOf="@+id/Flag"
                android:layout_marginLeft="13dp"
                android:layout_below="@+id/lo"
                android:layout_marginTop="7dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="02-2003-0100"
                android:layout_toRightOf="@+id/call"
                android:layout_alignTop="@+id/call"
                android:textSize="11dp"/>

            <ImageView
                android:id="@+id/timee"
                android:layout_width="11dp"
                android:layout_height="13dp"
                android:src="@drawable/b1"
                android:layout_toRightOf="@+id/Flag"
                android:layout_marginLeft="13dp"
                android:layout_below="@+id/call"
                android:layout_marginTop="7dp"/>

            <TextView
                android:id="@+id/timetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="9:00 ~ 17:30"
                android:layout_toRightOf="@+id/timee"
                android:layout_alignTop="@+id/timee"
                android:textSize="11dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Closed Saturday and Sunday"
                android:layout_below="@+id/timetext"
                android:layout_toRightOf="@+id/timee"
                android:textSize="9dp"/>

            <Button
                android:id="@+id/btn_call1"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignBaseline="@+id/lo"
                android:layout_alignParentRight="true"
                android:background="@color/main"
                android:text="Call"
                android:textColor="#ffffff" />

        </RelativeLayout>

        <RelativeLayout
