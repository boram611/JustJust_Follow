<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".Local1_1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gyeongbokgung"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleIndicator"></RatingBar>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/gyeongbokgung"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Information\nTel : 02-3700-3900\nLocation : 161, Sajik-ro, Jongno-gu, Seoul"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="220dp"
            android:layout_height="180dp"
            android:src="@drawable/map001"
            android:layout_marginRight="10dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/map"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="0sp"
                android:scaleType="centerCrop"
                android:background="#FFFFFF"
                android:layout_marginTop="10dp"
                android:src="@drawable/bu01" />

            <ImageButton
                android:id="@+id/taxi"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="0sp"
                android:scaleType="centerCrop"
                android:background="#FFFFFF"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/bu02"
                android:layout_toRightOf="@+id/map"/>
            <ImageButton
                android:id="@+id/review"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="0sp"
                android:scaleType="centerCrop"
                android:background="#FFFFFF"
                android:layout_marginTop="10dp"
                android:src="@drawable/bu03"
                android:layout_below="@id/map"/>

            <ImageButton
                android:id="@+id/information"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="0sp"
                android:scaleType="centerCrop"
                android:background="#FFFFFF"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/bu04"
                android:layout_toRightOf="@+id/review"
                android:layout_below="@+id/taxi"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight ="1"

        >

        <Button
            android:id="@+id/bt_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5BBDC8"
            android:text="Write a review"
            android:textColor="#ffffff"
            android:layout_gravity="bottom"/>
    </LinearLayout>
</LinearLayout>

